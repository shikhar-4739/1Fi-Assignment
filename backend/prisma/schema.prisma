generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum LoanStatus {
  ACTIVE
  CLOSED
  DEFAULTED
}

enum LoanApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum UserRole {
  ADMIN
  USER
  PARTNER
}
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole   @default(USER)
  partnerId String?
  partnerCustomerId String?
  refreshToken String?
  createdAt DateTime @default(now())
  loanApplications LoanApplication[]
  loans            Loan[]

  @@unique([partnerId, partnerCustomerId])
}

model LoanProduct {
  id            String   @id @default(uuid())
  name          String
  interestRate  Float
  ltv           Float
  minAmount     Float
  maxAmount     Float
  createdAt     DateTime @default(now())
  
  loanApplications LoanApplication[]
}

model LoanApplication {
  id           String   @id @default(uuid())
  loanAmount   Float
  status       LoanApplicationStatus   @default(PENDING)
  productId    String
  userId       String
  tenure       Int      @default(12) // in months
  createdAt    DateTime @default(now())
  partnerId    String?
  partnerCustomerId String?
  product LoanProduct @relation(fields: [productId], references: [id])
  user    User        @relation(fields: [userId], references: [id])
  loans   Loan[]
  collaterals     Collateral[]
}

model Loan {
  id                String   @id @default(uuid())
  loanApplicationId String
  userId            String
  outstandingAmount Float
  interestRate      Float
  tenure            Int    // in months
  status            LoanStatus   @default(ACTIVE)
  createdAt         DateTime @default(now())
  partnerId         String?
  partnerCustomerId String?
  loanApplication LoanApplication @relation(fields: [loanApplicationId], references: [id])
  user            User            @relation(fields: [userId], references: [id])
}

model Collateral {
  id        String   @id @default(uuid())
  fundName  String
  isin      String
  units     Float
  nav       Float
  loanApplicationId    String
  partnerId String?
  partnerCustomerId String?
  createdAt DateTime @default(now())
  
  loanApplication LoanApplication @relation(fields: [loanApplicationId], references: [id])
}

model FintechPartner {
  id              String   @id @default(uuid())
  name            String
  apiKey          String   @unique
  isActive        Boolean  @default(true)
  rateLimitPerMin Int      @default(60) // requests per minute
  createdAt       DateTime @default(now())
}
